<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ScreenTwo">

    <!-- Section One -->
    <ImageView
        android:id="@+id/oneAnimal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/frog" />

    <TextView
        android:id="@+id/oneCap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="[        ]" />

    <Button
        android:id="@+id/oneBtn"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:text="Reveal" />

    <TextView
        android:id="@+id/oneSpace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <!-- Section Two -->
    <ImageView
        android:id="@+id/twoAnimal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/frog" />

    <TextView
        android:id="@+id/twoCap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="[        ]" />

    <Button
        android:id="@+id/twoBtn"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:text="Reveal" />

    <TextView
        android:id="@+id/twoSpace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <!-- Section Three -->
    <ImageView
        android:id="@+id/threeAnimal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/frog" />

    <TextView
        android:id="@+id/threeCap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="[        ]" />

    <Button
        android:id="@+id/threeBtn"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:text="Reveal" />

</LinearLayout>